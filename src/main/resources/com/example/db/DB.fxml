        </GridPane.margin>
    </TextField>
    <ImageView fx:id="insideIcon" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
        <GridPane.margin>
            <Insets/>
        </GridPane.margin>
        <viewport>
            <Rectangle2D/>
        </viewport>
    </ImageView>
    <TextField fx:id="passwordField" GridPane.columnSpan="2" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="200.0" right="200.0"/>
        </GridPane.margin>
    </TextField>
    <Button fx:id="register" mnemonicParsing="false" onAction="#onRegisterBtnClick" prefHeight="38.0"
            prefWidth="176.0" text="Register" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <GridPane.margin>
            <Insets left="50.0"/>
        </GridPane.margin>
    </Button>
